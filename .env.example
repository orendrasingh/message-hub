# Message Hub Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-very-secure-secret-key-here
DEBUG=True
FLASK_ENV=development

# Evolution API Configuration (REQUIRED)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///message_hub.db

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800
UPLOAD_FOLDER=uploads

# Email Configuration (for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Security Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting Configuration
RATE_LIMIT_LOGIN=20 per minute
RATE_LIMIT_REGISTER=10 per minute
RATE_LIMIT_MESSAGING=100 per hour

# Application Settings
MAX_CONTACTS_UPLOAD=10000
DEFAULT_MESSAGE_DELAY=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
